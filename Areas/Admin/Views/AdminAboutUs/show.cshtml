
<!-- Begin Page Content -->
<div class="container-fluid">
<!-- Page Heading -->
<h1 class="h3 mb-2 text-gray-800">جدول  معرفی </h1>
@if(ViewBag.message!=null)
{
    <p class="mb-4 alert alert-warning text-center">@ViewBag.message</p>
}
<!-- DataTales Example -->
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">جدول  معرفی </h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>عنوان</th>
                        <th>توضیحات</th>
                        <th>عملیات</th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>عنوان</th>
                        <th>توضیحات</th>
                        <th>عملیات</th>
                    </tr>
                </tfoot>
                </tbody>
                <tfoot>
                    <tr>
                        @if(ViewBag.Aboutus !=null)
                        {
                            foreach(var item in ViewBag.Aboutus)
                            {
                               <td>@item.Title</td> 
                               <td>@item.Detail</td> 
                               <td>
                                <a class="btn btn-warning" href="/admin/AdminAboutus/Gotoupdata/@item.Id">ویرایش</a>
                               </td>
                            }
                        }
                        
                    </tr>
                </tfoot>
                
            </table>
        </div>
    </div>
</div>
</div>
<!-- /.container-fluid